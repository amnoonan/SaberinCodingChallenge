@page "/"
@using music_manager_starter.Shared

@inject HttpClient Http

@code {
    private List<Song> songs;
    private Modal songModal = default!;
    private Song songSelected;

    protected override async Task OnInitializedAsync()
    {
        songs = await Http.GetFromJsonAsync<List<Song>>("api/songs");
    }

    private async Task ShowSongDetailsModal(Song song)
    {
        songSelected = song;
        await songModal.ShowAsync();
    }

    private IconName GetStarValue(int starNum)
    {
        if (starNum < songSelected.AvgRating) return IconName.StarFill;
        if (starNum > songSelected.AvgRating && starNum <= songSelected.AvgRating + 0.5) return IconName.StarHalf;
        else return IconName.Star;
    }
}

<div class="p-0 min-h-screen bg-pattern flex flex-col items-center justify-center">
    <h2 class="text-3xl font-bold text-white mb-8 text-center">Song Library</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        @if (songs != null && songs.Count > 0)
        {
            @foreach (var song in songs)
            {
                <div class="glass p-6 border border-gray-300 rounded-lg text-white transition-transform transform hover:scale-105 hover:shadow-xl cursor-pointer" @onclick="@(e => ShowSongDetailsModal(@song))"   >
                    <h3 class="text-xl font-semibold mb-2">@song.Title</h3>
                    <p class="text-md">Artist: <span class="font-light">@song.Artist</span></p>
                    <p class="text-md">Release Date: <span class="font-light">@song.ReleaseDate.ToString()</span></p>

                </div>
            }
        }
        else
        {
            <div class="col-span-1 text-center text-gray-400">No songs found.</div>
        }
    </div>

    <style>
        .modal-style, .modal-header, .modal-content {
            background-color: rgb(17, 24, 39);
            color: white;
            border: none;
        }
    </style>

    <Modal @ref="songModal" IsVerticallyCentered="true" ModalClass="modal-style" Size="ModalSize.Large">
            <BodyTemplate>
                <div style="display: flex">
				    <img src="https://www.afrocharts.com/images/song_cover.png" style="width: 200px; height: 200px; margin: 16px" />
				    <div style="margin: 16px">
					    <h2 class="font-semibold mb-2" >@songSelected.Title</h2>

                        <div style="padding-bottom:1rem">
						    <Icon Name=GetStarValue(1) />
						    <Icon Name=GetStarValue(2) />
						    <Icon Name=GetStarValue(3) />
						    <Icon Name=GetStarValue(4) />
						    <Icon Name=GetStarValue(5) />
                        </div>
                        

					    <p class="text-md">Album: @songSelected.Album</p>
					    <p class="text-md">Artist: @songSelected.Artist</p>
					    <p class="text-md">Release Date: @songSelected.ReleaseDate</p>
					    <p class="text-md">Genre: @songSelected.Genre</p>
				    </div>
                </div>
                
                
            </BodyTemplate>
    </Modal>
</div>

<style>
    .bg-pattern {
        background: linear-gradient( rgba(31, 41, 55, 0.7), rgba(31, 41, 55, 0.7) ), url('dalle.webp');
        background-size: cover;
        background-position: center;
        font-family: 'Rajdhani', sans-serif;
    }

 

    .glass {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px); 
        border-radius: 10px; 
        position: relative; 
        overflow: hidden; 
    }

        .glass:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border: 2px solid rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            pointer-events: none; 
        }
</style>